<%- include('../layouts/main/header', {title: product.name}) %>
<div
        class="rounded-bottom-4 shadow-sm"
        style="background: url(/images/<%= product.thumbnail %>); background-size: cover; height: 260px; width: 100%; overflow: hidden;">
    <div class="d-flex justify-content-center align-items-center"
         style="background-color: #0000009c;color:whitesmoke; font-size: 4rem; height: 100%;width: 100%">
        <%= product.name %>
    </div>
</div>
<div class="single_product my-5">
    <div class="container-fluid" style=" background-color: #fff; padding: 11px;">
        <div class="row">
            <div class="col-3 order-lg-2 order-1">
                <img class="w-100 rounded-4 shadow" style="height: 320px" id="thumbnail"
                     src="/images/<%= product.thumbnail %>" alt="">
                <div class="d-flex">
                    <div class="col-2 m-2">
                        <img class="rounded mx-3 shadow"
                             onclick="document.getElementById('thumbnail').src = this.src"
                             style="width:90px; height:90px;cursor: pointer;"
                             src="/images/<%= product.thumbnail %>"
                             alt="<%= product.thumbnail %>">
                    </div>
                    <% product.gallery.forEach(function (image) { %>
                        <% if(!image.image.includes('mp4')){ %>
                            <div class="col-2 m-2">
                                <img class="rounded mx-3 shadow"
                                     onclick="document.getElementById('thumbnail').src = this.src"
                                     style="width:90px; height:90px; cursor: pointer;"
                                     src="/images/<%= image.image %>"
                                     alt="<%= image.image %>">
                            </div>
                        <% } %>
                    <% }) %>
                </div>
            </div>
            <div class="col-6 order-2">
                <div class="product_description">
                    <div class="my-4">
                        <%= product.description %>
                    </div>
                    <form method="post" class="d-flex ">
                        <label for="quantity">

                        </label><input class="me-2 text-center" min="1" max="10" style="width: 50px" id="quantity"
                                       name="quantity"
                                       type="number"
                                       value="1">
                        <input type="hidden" name="source" value="single">
                        <input type="hidden" name="product_id" value="<%= product.id %>">
                        <button class="btn btn-primary shop-button">Add to Cart</button>
                    </form>
                </div>
            </div>
            <div class="col-3 order-3">
                <% product.gallery.forEach(function (image) { %>
                    <% if(image.image.includes('mp4')){ %>
                        <div class="col-2 m-2">
                            <video class="rounded shadow" width="250" controls>
                                <source src="/images/<%= image.image %>" type="video/mp4">
                                Your browser does not support HTML video.
                            </video>
                        </div>
                    <% } %>
                <% }) %>
            </div>
        </div>
    </div>
</div>
<%- include('../layouts/main/footer') %>


