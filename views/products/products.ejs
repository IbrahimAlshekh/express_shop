<%- include('../layouts/main/header', {title: 'Products'}) %>
<div style="height: 84vh">
    <img src="/images/hero2.png" class="img-fluid rounded-bottom-4 shadow-sm w-100 object-fit-cover"
         alt="">
    <div class="container">
        <% if (products.length > 0){ %>
            <div class="p-2">
                <h1 class="w-100 text-center p-4 border-bottom border-body-secondary">ALL PRODUCTS</h1>
                <div class="row row-cols-6">
                    <% products.forEach(function (product){ %>
                        <%- include('shop/includes/product_list_item.html', {product:product}) %>
                    <% }); %>
                </div>
            </div>
        <% }else{ %>
            <div class="alert alert-info py-4 my-4" role="alert">
                There are no products yet.
            </div>
        <% } %>
    </div>
</div>
<%- include('../layouts/main/footer') %>

