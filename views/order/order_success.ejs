<%- include('../layouts/main/header', {title: 'Order success'}) %>
    <% if (error) { %>
        <div class="alert alert-danger py-4 my-4" role="alert">
            <i class="bi bi-exclamation-circle fs-5"></i>
            <%= error %>
        </div>
    <% } else { %>
        <div class="alert alert-success py-4 my-4" role="alert">
            <i class="bi bi-check-circle fs-5"></i>
            Your order has been placed successfully, please check your email for more details.<br>
        </div>
    <% } %>
<%- include('../layouts/main/footer') %>