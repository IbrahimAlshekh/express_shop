<%- include('../layouts/auth/header', {title: 'Order success'}) %>
<form method="post" action=" 'login">
    <h1 class="h3 mb-3 fw-normal text-center">Please sign in</h1>
    <a href="/"><i class="px-1 py-2 bi bi-arrow-90deg-left"></i>Back to home</a>
    <div class="form-floating py-1">
        <input type="text" class="form-control" name="username" id="floatingInput" placeholder="Username">
        <label for="floatingInput">Username</label>
    </div>
    <div class="form-floating py-1">
        <input type="password" class="form-control" name="password" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">Password</label>
    </div>
    <% if (error){ %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>
    <% if (success) { %>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
    <% } %>
    <div class="checkbox mb-3">
        <a class="text-end w-100" href="reset_password">forget password?</a>
    </div>
    <button class=" w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
</form>
<a href="/auth/signup" class="my-2 w-100 btn btn-lg btn-outline-secondary" type="submit">Sign up</a>
