<%- include('../layouts/auth/header', {title: 'Set new password'}) %>
<form method="post" action="reset_password">
        <input type="hidden" name="reset_token" value="<%= reset_token %>">
        <h1 class="h3 mb-3 fw-normal text-center">Reset password</h1>
        <a href="login"><i class="px-1 bi bi-arrow-90deg-left"></i>Back to login</a>
        <% if (!done) { %>
            <div class="form-floating my-2">
                <input type="password" class="form-control" name="password" id="floatingInput" placeholder="Password">
                <label for="floatingInput">Password</label>
            </div>
            <div class="form-floating my-2">
                <input type="password" class="form-control" name="password_confirm" id="floatingInput" placeholder="Confirm password">
                <label for="">Confirm Password</label>
            </div>
        <% } %>
        <% if (error){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if (success) { %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
        <% if(!done){ %>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Save</button>
        <% } %>
    </form>
    <p class="mt-5 mb-3 text-center">Express Shop &copy; 2023</p>
<%- include('../layouts/auth/footer') %>