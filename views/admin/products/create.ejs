<%- include('../../layouts/admin/header') %>
<main class="p-4">
    <h4 class="mb-3">Product information</h4>
    <form action="/admin/products" method="post" enctype="multipart/form-data">
        <input type="hidden" name="action" value="create">
        <div class="row">
            <div class="mx-3 col-12 border-right">
                <label for="thumbnail">Product thumbnail</label>
                <div class="d-flex justify-content-start align-items-center">
                    <img class="rounded-circle mx-3"
                         src="/images/product_image.png"
                         style="width:80px; height:80px;"
                         alt="profile image">
                    <div class="mt-3 w-75">
                        <input id="thumbnail" class="form-control" name="thumbnail" type="file">
                    </div>
                </div>
            </div>
            <div class="col-12 border-right">
                <div class="p-3 py-5">
                    <div class="row g-3">
                        <div class="col-9">
                            <label for="name" class="form-label">Product name</label>
                            <div class="input-group has-validation">
                                <input name="name" type="text" class="form-control"
                                       id="name">
                            </div>
                        </div>
                        <div class="col-3">
                            <label for="price" class="form-label">Price</label>
                            <div class="input-group">
                                <input name="price" type="number" step="0.1" class="form-control"
                                       id="price">
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <label for="Description" class="form-label">Last name</label>
                            <textarea name="description" rows="4" class="form-control"
                                      id="Description"></textarea>
                        </div>
                        <div class="col-12 border-right">
                            <label for="gallery">Product gallery</label>
                            <input id="gallery" class="form-control" name="thumbnail" type="file" multiple>
                        </div>
                        <% if (error){ %>
                            <div class="alert alert-danger" role="alert">
                                <%= error %>
                            </div>
                        <% } %>
                        <div class="mt-5 text-center">
                            <button class="btn btn-primary w-50 profile-button">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</main>
<%- include('../../layouts/admin/footer') %>
