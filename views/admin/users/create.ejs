<%- include('../../layouts/admin/header') %>
<main class="p-4">
    <h4 class="mb-3">User information</h4>
    <form class="needs-validation" action="/admin/users" method="post">
        <div class="row">
            <div class="col-12 border-right">
                <div class="d-flex justify-content-start align-items-center">
                    <img class="rounded-circle mx-3"
                         style="width:80px; height:80px;"
                         src="<%= user?.image ?? '/images/user_login.png' %>"
                         alt="profile image">
                    <div class="mt-3 w-75">
                        <input class="form-control" type="file" id="formFile">
                    </div>
                </div>
            </div>
            <div class="col-12 border-right">
                <div class="p-3 py-5">
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <label for="firstName" class="form-label">First name</label>
                            <input value="<%= user?.first_name ?? "" %>" name="first_name" type="text" class="form-control"
                                   id="firstName">
                        </div>
                        <div class="col-sm-6">
                            <label for="lastName" class="form-label">Last name</label>
                            <input value="<%= user?.last_name ?? "" %>" name="last_name" type="text" class="form-control"
                                   id="lastName">
                        </div>
                        <div class="col-12">
                            <label for="username" class="form-label">Username</label>
                            <div class="input-group has-validation">
                                <span class="input-group-text">@</span>
                                <input value="<%= user?.username ?? "" %>" name="username" type="text" class="form-control"
                                       id="firstName">
                            </div>
                        </div>
                        <div class="col-12">
                            <label for="email" class="form-label">Email</label>
                            <input value="<%= user?.email ?? "" %>" type="email" name="email" class="form-control"
                                   id="firstName">
                        </div>
                        <div class="col-sm-6">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="password" class="form-control"
                                   id="password">
                        </div>
                        <div class="col-sm-6">
                            <label for="password_confirm" class="form-label">Confirm password</label>
                            <input type="password" name="password_confirm" class="form-control"
                                   id="password_confirm">
                        </div>
                        <% if (error){ %>
                            <div class="alert alert-danger" role="alert">
                                <%= error %>
                            </div>
                        <% } %>
                        <div class="mt-5 text-center">
                            <button class="btn btn-primary w-50 profile-button" type="button">Save Profile</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</main>
<%- include('../../layouts/admin/footer') %>
