<%- include('../layouts/main/header', {title: 'Edit profile'}) %>
<form
  method="post"
  action="/users/edit"
  enctype="multipart/form-data"
  class="align-items-center bg-body-secondary d-flex justify-content-around m-5 p-5 rounded-4 row shadow"
>
  <input type="hidden" name="action" value="edit_profile" />
  <input type="hidden" name="user_id" value="<%= user.id %>" />
  <div class="col-sm-12">
    <h6 class="my-2 fs-4">Information</h6>
    <div class="col-12 border-right">
        <div class="d-flex justify-content-start align-items-center">
            <img class="rounded-circle mx-3"
                 style="width:80px; height:80px;"
                 src="/images/<%= user?.profile_image ?? 'user_login.png' %>"
                 alt="profile image">
            <div class="mt-3 w-75">
                <input class="form-control" name="profile_image" type="file" accept="image/*" id="formFile">
                <input type="hidden" name="profile_image_name" value="<%= user?.profile_image ?? '' %>">
            </div>
        </div>
    </div>
    <div class="py-2 d-flex justify-content-start align-items-center">
      <label for="last_name" class="me-2 fw-bold">First name:</label>
      <input
        id="last_name"
        type="text"
        name="first_name"
        class="px-2"
        value="<%= user.first_name %>"
      />
    </div>
    <div class="py-2 d-flex justify-content-start align-items-center">
      <label for="first_name" class="me-2 fw-bold">Last name:</label>
      <input
        id="first_name"
        type="text"
        name="last_name"
        class="px-2"
        value="<%= user.last_name %>"
      />
    </div>
    <div class="py-2 d-flex justify-content-start align-items-center">
      <label for="username" class="me-2 fw-bold">Username:</label>
      <input
        id="username"
        type="text"
        name="username"
        class="px-2"
        value="<%= user.username %>"
      />
    </div>
    <div class="py-2 d-flex justify-content-start align-items-center">
      <label for="email" class="me-2 fw-bold">Email:</label>
      <input
        id="email"
        type="text"
        name="email"
        class="px-2"
        value="<%= user.email %>"
      />
    </div>
    <div class="py-2 d-flex justify-content-start align-items-center">
      <label for="password" class="me-2 fw-bold">Password:</label>
      <input
        id="password"
        type="password"
        name="password"
        class="px-2"
        value=""
      />
    </div>
    <div class="py-2 d-flex justify-content-start align-items-center">
      <label for="phone" class="me-2 fw-bold">Phone number:</label>
      <input
        type="text"
        id="phone"
        name="phone"
        class="px-2"
        value="<%= user.phone %>"
      />
    </div>
    <div class="py-2 d-flex justify-content-start align-items-center">
      <label for="address" class="me-2 fw-bold">Address:</label>
      <input
        type="text"
        name="address"
        id="address"
        class="px-2"
        value="<%= user.address %>"
      />
    </div>
  </div>
  <button class="w-25 btn btn-primary"><i class="bi bi-check"></i>Save</button>
</form>
<%- include('../layouts/main/footer') %>
