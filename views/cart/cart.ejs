<%- include('../layouts/main/header', {title: 'Order success'}) %>
<div class="row border-bottom border-secondary">
    <h3>Your Cart</h3>
</div>
<% if (cart_items.length > 0) { %>
    <div class="row">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Product Name</th>
                <th scope="col">Quantity</th>
                <th scope="col">Total</th>
            </tr>
            </thead>
            <tbody>
            <% cart_items.forEach(function (item){ %>
                <tr>
                    <th scope="row"><%= item.product.id %></th>
                    <td><%= item.product.name %></td>
                    <td><%= item.quantity %></td>
                    <td><%= item.price %>$</td>
                </tr>
            <% }); %>
            <tr class="border-bottom border-secondary"></tr>
            <tr>
                <th scope="row">Total</th>
                <td></td>
                <td></td>
                <td></td>
                <td><%= total %>$</td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="row">
        <a class="btn btn-primary p-2" href="checkout">CheckOut</a>
    </div>
<% } else { %>
    <div class="alert alert-info py-4 my-4" role="alert">
        Your cart is empty, please add some products to your cart.
    </div>
<% } %>
<%- include('../layouts/main/footer') %>