<%- include('../layouts/main/header', {title: 'Cart'}) %>
<div class="row border-bottom border-secondary">
  <h3>Your Cart</h3>
</div>
<% if (user.cart.items.length > 0) { %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Product Name</th>
      <th scope="col">Quantity</th>
      <th scope="col">Total</th>
    </tr>
  </thead>
  <tbody>
    <% user.cart.items.forEach(function (item){ %>
    <tr>
      <td><%= item.product.id %></td>
      <td><%= item.product.name %></td>
      <td><%= item.quantity %></td>
      <td><%= item.price %>$</td>
    </tr>
    <% }); %>
    <tr class="border-bottom border-secondary"></tr>
    <tr>
      <td>Total</td>
      <td></td>
      <td></td>
      <td><%= total %>$</td>
    </tr>
  </tbody>
</table>
<div class="d-flex justify-content-center w-100">
  <a class="btn btn-primary d-flex justify-content-center m-4 p-2 w-75" href="checkout">CheckOut</a>
</div>
<% } else { %>
<div class="alert alert-info py-4 my-4" role="alert">
  Your cart is empty, please add some products to your cart.
</div>
<% } %> <%- include('../layouts/main/footer') %>
